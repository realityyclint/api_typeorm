{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "rootDir": ".", // Source files are in the root folder
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["**/*.ts"], // Include all .ts files in the root folder
    "exclude": ["../node_modules"] // Exclude node_modules folder
  }